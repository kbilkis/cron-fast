{
  "name": "cron-fast",
  "version": "0.4.0",
  "description": "Fast and tiny JavaScript/TypeScript cron parser with timezone support - works in Node.js, Deno, Bun, Cloudflare Workers, and browsers. Zero dependencies.",
  "keywords": [
    "browser",
    "bun",
    "cloudflare-workers",
    "cron",
    "deno",
    "esm",
    "fast",
    "javascript",
    "lightweight",
    "node",
    "nodejs",
    "parser",
    "performance",
    "schedule",
    "scheduler",
    "timezone",
    "tree-shakeable",
    "typescript",
    "workerd",
    "zero-dependencies"
  ],
  "homepage": "https://github.com/kbilkis/cron-fast#readme",
  "license": "MIT",
  "author": "Kasparas Bilkis kasparas@bilkis.lt",
  "repository": {
    "type": "git",
    "url": "https://github.com/kbilkis/cron-fast.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:workerd": "vitest run --config vitest.workerd.config.ts",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "typecheck": "tsc --noEmit",
    "benchmark": "tsx scripts/benchmark.ts",
    "benchmark:deno": "deno run --allow-read --allow-env --allow-write --unstable-sloppy-imports scripts/benchmark.ts",
    "benchmark:bun": "bun run scripts/benchmark.ts",
    "update-benchmark": "tsx scripts/benchmark.ts --update && oxfmt README.md docs/benchmark-comparison-node.md",
    "update-benchmark:deno": "deno run --allow-read --allow-env --allow-write --unstable-sloppy-imports scripts/benchmark.ts --update && oxfmt docs/benchmark-comparison-deno.md",
    "update-benchmark:bun": "bun run scripts/benchmark.ts --update && oxfmt docs/benchmark-comparison-bun.md",
    "bundle-size": "tsx scripts/bundle-size.ts",
    "update-bundle-size": "tsx scripts/bundle-size.ts --update && oxfmt README.md",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.11",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cron-parser": "^5.5.0",
    "cron-schedule": "^6.0.0",
    "cron-validate": "^1.5.3",
    "croner": "^10.0.1",
    "esbuild": "^0.27.3",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "pre-push": "pnpm test"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "oxfmt"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.29.2"
}
